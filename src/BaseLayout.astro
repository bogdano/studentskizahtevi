---
import { Image } from 'astro:assets'
import './styles/zahtevi.css'
import ThemeToggle from './components/ThemeToggle.astro'
const { lang, title } = Astro.props
---

<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
       	<meta name="theme-color" content="" id="meta-theme-color" />
        <script src="https://cdn.jsdelivr.net/npm/motion@11.18.2/dist/motion.js"></script>
	</head>
	<body class="text-zinc-700 dark:bg-zinc-950 dark:text-zinc-300 font-georgia transition-colors">
	    <div class="flex flex-row justify-end m-4">
	        <ThemeToggle />
	    </div>
		<div class="flex justify-center mb-6">
		    <Image src="/sikter_saka.svg" alt="RUKE SU VAM KRVAVE" width="150" height="150" class="h-56 w-56" />
		</div>
	    <article class="mx-4 md:px-12 md:max-w-5xl md:mx-auto mb-4">
			<slot />
        </article>
        <div class="flex justify-center mb-24 mx-12 md:mx-auto md:w-1/3">
            <img src="/sretenje.svg" alt="Sretenje" class="w-fit" />
        </div>
        <div class="flex justify-center mx-12 md:mx-24">
		    <img src="/studentskizahtevi.svg" alt="studentskizahtevi.rs" class="" loading="lazy" />
		</div>
		<div class="w-full mx-auto mb-24">
		    <a href="https://www.fontspace.com/overspray-font-f21537" class="flex flex-row w-fit font-mono hover:underline underline-offset-4 text-center mx-auto" target="_blank">
				[stencil font]
                <svg class="ml-2 w-3 h-3 mt-1 fill-zinc-500 dark:fill-zinc-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52" enable-background="new 0 0 52 52" xml:space="preserve"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g> <path d="M48.7,2H29.6C28.8,2,28,2.5,28,3.3v3C28,7.1,28.7,8,29.6,8h7.9c0.9,0,1.4,1,0.7,1.6l-17,17 c-0.6,0.6-0.6,1.5,0,2.1l2.1,2.1c0.6,0.6,1.5,0.6,2.1,0l17-17c0.6-0.6,1.6-0.2,1.6,0.7v7.9c0,0.8,0.8,1.7,1.6,1.7h2.9 c0.8,0,1.5-0.9,1.5-1.7v-19C50,2.5,49.5,2,48.7,2z"></path> <path d="M36.3,25.5L32.9,29c-0.6,0.6-0.9,1.3-0.9,2.1v11.4c0,0.8-0.7,1.5-1.5,1.5h-21C8.7,44,8,43.3,8,42.5v-21 C8,20.7,8.7,20,9.5,20H21c0.8,0,1.6-0.3,2.1-0.9l3.4-3.4c0.6-0.6,0.2-1.7-0.7-1.7H6c-2.2,0-4,1.8-4,4v28c0,2.2,1.8,4,4,4h28 c2.2,0,4-1.8,4-4V26.2C38,25.3,36.9,24.9,36.3,25.5z"></path> </g> </g></svg>
            </a>
		</div>
	</body>
</html>
